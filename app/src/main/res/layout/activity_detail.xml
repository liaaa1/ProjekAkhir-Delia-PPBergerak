<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/detailImage"
        android:scaleType="centerCrop"
        android:src="@drawable/packchoi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"
        android:background="@color/SecondaryColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailTitle"
        android:layout_below="@id/detailImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Packchoi"
        android:textColor="@color/primaryColor"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:elevation="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailDesc"
        android:layout_below="@id/detailTitle"
        android:layout_marginTop="16dp"
        android:text="Deskripsi tanaman packchoi yang sangat lezat dan sehat untuk dikonsumsi. Dapat ditanam di berbagai kondisi tanah dan cuaca."
        android:textColor="@color/SecondaryColor"
        android:textSize="18sp"
        android:padding="16dp"
        android:elevation="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailCare"
        android:layout_below="@id/detailDesc"
        android:layout_marginTop="16dp"
        android:text="Perawatan: ..."
        android:textColor="@color/SecondaryColor"
        android:textSize="18sp"
        android:padding="16dp"
        android:elevation="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailDisease"
        android:layout_below="@id/detailCare"
        android:layout_marginTop="16dp"
        android:text="Penyakit: ..."
        android:textColor="@color/SecondaryColor"
        android:textSize="18sp"
        android:padding="16dp"
        android:elevation="2dp"/>

</RelativeLayout>
